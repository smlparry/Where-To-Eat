<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% count = 0 %>
    <% @items.each do |item| %>
      <tr>
        <td><%= count += 1 %></td>
        <td><%= link_to 'Show', admin_item_path(id: item.id) %></td>
        <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
        <td><%= link_to 'Destroy', admin_item_path(id: item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= item.item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_admin_item_path %>
