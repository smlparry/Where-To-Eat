<div class="admin">
    <div class="container">
        <div class="wrapper">
            <table>
                <tr>
                    <td>
                        Actions:
                    </td>
                    <td>
                        <b>Name</b>
                    </td>
                    <td>
                        <b>Address</b>
                    </td>
                    <td>
                        <b>Active?</b>
                    </td>
                    <td>
                        <b>Has Items?</b>
                    </td>
                    <td>
                        <b>Subscription Amount ($)</b>
                    </td>

                </tr>
            <% @restaurants.each do |restaurant| %>
                <tr>
                    <td>
                    <%= button_to "Delete", admin_restaurant_path({ id: restaurant.id}), :method => :delete , data: {:confirm => "Are you sure?"} %>
                    <%= link_to "Edit", edit_admin_restaurant_path(restaurant.id) %>
                        <a href="restaurants/items/<%= restaurant.id %>">Items</a>
                    </td>
                    <td>
                        <%= restaurant.name %>
                    </td>
                    <td>
                        <%= restaurant.address %>
                    </td>
                    <td>
                        <%= restaurant.active %>
                    </td>
                    <td>
                        <%= restaurant.has_items %>
                    </td>
                    <td>
                        <%= restaurant.subscription_amount %>
                    </td>
                </tr>
            <% end %>
        </table>
        </div>
    </div>

</div>

<script charset="utf-8">
$(document).ready(function () {
    $(".delete").click( function(event) {
        var restaurantId = event.currentTarget.dataset.id;
        if ( confirm("Are you sure you want to delete this restaurant?") ){
            window.location.href = 'restaurants/delete/' + restaurantId ;
        }
    });
});

</script>
