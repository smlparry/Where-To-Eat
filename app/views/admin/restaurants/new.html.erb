<div class="add-restaurant">
    <div class="container">
        <div class="wrapper">
            <h1>Add restaurant to Eat Under</h1>
                <%= form_tag({action: 'create'}, id: "add_restaurant_form") do %>
                <div class="form-element">
                    <div class="label">
                        <%= label_tag(:restaurant_name) %>
                    </div>
                    <div class="input-field">
                        <%= text_field_tag(:restaurant_name, @restaurant_name, placeholder: "...", required: true) %>
                    </div>
                </div>

                <div class="form-element">
                    <div class="label">
                        <%= label_tag(:restaurant_address) %>
                    </div>
                    <div class="input-field">
                        <%= text_field_tag(:restaurant_address, @restaurant_address, placeholder: "...", required: true) %>
                    </div>

                </div>

                <div class="form-element">
                    <div class="label">
                        <%= label_tag(:contact_email) %>
                    </div>
                    <div class="input-field">
                        <%= email_field_tag(:contact_email, @contact_email, placeholder: "...", required: true) %>
                    </div>
                </div>

                <div class="form-element">
                    <div class="label">
                        <%= label_tag(:contact_name) %>
                    </div>
                    <div class="input-field">
                        <%= text_field_tag(:contact_name, @contact_name, placeholder: "...", required: true) %>
                    </div>
                </div>

                <div class="form-element">
                    <div class="label">
                        <%= label_tag("Amount in dollars") %>
                    </div>
                    <div class="input-field">
                        <%= number_field_tag(:amount, 50) %>
                    </div>
                </div>
                <div class="form-element">
                    <div class="input-field">
                        <button type="submit" class="submit-button" name="commit">Submit</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
